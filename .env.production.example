# Production Environment Variables
# Copy this file to .env.production and fill in the values

# GitHub Container Registry
GITHUB_USERNAME=your-github-username
REPO_NAME=dashboard
IMAGE_TAG=latest

# Database Configuration
DB_NAME=asmi_db
DB_USER=postgres
DB_PASSWORD=your-super-strong-password-here

# JWT Authentication
SECRET_KEY=your-production-secret-key-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=160

# WhatsApp API
WHAPI_BASE_URL=https://gate.whapi.cloud
WHAPI_TOKEN=your-production-whapi-token

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Optional: Email notifications, etc
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
