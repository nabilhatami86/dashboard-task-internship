# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TypeScript & JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 120

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
